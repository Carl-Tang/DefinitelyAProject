<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ResultSceneController">
   <children>
      <StackPane prefHeight="300.0">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <Label fx:id="_correctness" text="Correctness">
                     <font>
                        <Font size="36.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER">
                     <children>
                        <Label text="Your answer is: " />
                        <Label fx:id="_answerLabel" text="&lt;Answer&gt;" />
                     </children>
                  </HBox>
                  <Button fx:id="_replayBtn" mnemonicParsing="false" onAction="#replayBtnClicked" text="Replay">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="_retryBtn" mnemonicParsing="false" onAction="#retryBtnClicked" text="Try again">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </StackPane>
      <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="_nextBtn" mnemonicParsing="false" onAction="#nextBtnClicked" prefHeight="40.0" prefWidth="200.0" text="Next question">
                     <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="_finishBtn" mnemonicParsing="false" onAction="#finishBtnClicked" prefHeight="40.0" prefWidth="200.0" text="Skip the rest and finish">
                     <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="BOTTOM_LEFT">
         <children>
            <Button fx:id="_helpBtn" mnemonicParsing="false" onAction="#helpBtnClicked" prefHeight="50.0" prefWidth="50.0" text="Help" />
         </children>
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
