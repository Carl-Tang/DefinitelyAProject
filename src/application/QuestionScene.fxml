<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" prefHeight="300.0">
         <children>
            <Button fx:id="_previousBtn" mnemonicParsing="false" onAction="#previousBtnClicked" text="Previous" />
            <StackPane HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="_question" text="Question">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Label>
               </children>
            </StackPane>
            <Button fx:id="_nextBtn" mnemonicParsing="false" onAction="#nextBtnClicked" text="Next" />
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <children>
            <StackPane>
               <children>
                  <ProgressIndicator fx:id="_progressInd" prefHeight="130.0" prefWidth="130.0" progress="0.3">
                     <padding>
                        <Insets bottom="-16.0" />
                     </padding>
                     <StackPane.margin>
                        <Insets />
                     </StackPane.margin>
                  </ProgressIndicator>
                  <Button fx:id="_recordBtn" mnemonicParsing="false" onAction="#recordBtnClicked" text="Press To Record" textAlignment="CENTER" />
               </children>
            </StackPane>
            <Region prefWidth="150.0" />
            <Button fx:id="_finishBtn" mnemonicParsing="false" onAction="#finishBtnClicked" prefHeight="50.0" text="Finish Playing">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <HBox alignment="BOTTOM_LEFT" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="_helpBtn" mnemonicParsing="false" onAction="#helpBtnClicked" prefHeight="50.0" prefWidth="50.0" text="Help" />
         </children>
      </HBox>
   </children>
</VBox>
