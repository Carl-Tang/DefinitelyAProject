<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.QuestionSceneController">
   <children>
      <StackPane prefHeight="300.0">
         <children>
            <Label fx:id="_question" text="Question">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
         </children>
      </StackPane>
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <children>
            <StackPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="130.0" prefWidth="130.0">
               <children>
                  <ProgressIndicator fx:id="_progressInd" progress="0.0" StackPane.alignment="CENTER">
                     <padding>
                        <Insets bottom="-16.0" />
                     </padding>
                     <StackPane.margin>
                        <Insets />
                     </StackPane.margin>
                  </ProgressIndicator>
                  <Button fx:id="_recordBtn" mnemonicParsing="false" onAction="#recordBtnClicked" text="Press To Record" textAlignment="CENTER" />
               </children>
            </StackPane>
         </children>
      </HBox>
      <HBox alignment="BOTTOM_LEFT">
         <children>
            <Button fx:id="_helpBtn" mnemonicParsing="false" onAction="#helpBtnClicked" prefHeight="50.0" prefWidth="50.0" text="Help" />
         </children>
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
