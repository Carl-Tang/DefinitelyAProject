<VBox prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LeaderBoardController">
   <children>
      <HBox alignment="CENTER" prefHeight="50.0" style="-fx-background-color: #1976d2;">
         <children>
            <JFXButton onAction="#backToHome" prefHeight="50.0" prefWidth="150.0" text="Home" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </JFXButton>
            <Region layoutX="188.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Label text="Leader Board" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <JFXButton layoutX="309.0" layoutY="10.0" onAction="#personalLogBtnClicked" prefHeight="50.0" prefWidth="150.0" text="Show personal log" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </JFXButton>
         </children>
      </HBox>
      <HBox alignment="BOTTOM_CENTER">
         <children>
            <JFXTextField fx:id="_nameSearchField" focusColor="#1976d2" prefHeight="35.0" promptText="Search for your name">
