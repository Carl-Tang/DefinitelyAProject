         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" prefHeight="422.0" prefWidth="1000.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="TOP_CENTER" maxWidth="450.0" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER" prefHeight="69.0" prefWidth="248.0" style="-fx-background-color: #00796b;">
                     <children>
                        <Label text="Normal Mode" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                     <effect>
                        <DropShadow blurType="GAUSSIAN" color="#00000099" height="30.0" radius="9.5" width="10.0" />
                     </effect>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <JFXListView fx:id="_normalModeListView" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </JFXListView>
               </children>
               <HBox.margin>
                  <Insets bottom="30.0" />
               </HBox.margin>
            </VBox>
            <Region prefWidth="50.0" />
            <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" maxWidth="450.0" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER" prefHeight="69.0" prefWidth="248.0" style="-fx-background-color: #7b1fa2;">
                     <children>
                        <Label text="Endless Mode" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                     <effect>
                        <DropShadow blurType="GAUSSIAN" color="#00000099" height="30.0" radius="9.5" width="10.0" />
