<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.PickQuestionListSceneController">
   <children>
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <VBox minHeight="450.0" minWidth="300.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Questions in the set">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="2.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Label>
                  <JFXListView fx:id="_allQuestionsList" minHeight="400.0" minWidth="250.0" VBox.vgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" minWidth="40.0">
               <children>
                  <JFXButton fx:id="_addBtn" onAction="#addBtnClicked" prefHeight="40.0" prefWidth="40.0" text="&gt;&gt;">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </JFXButton>
                  <JFXButton fx:id="_deleteBtn" onAction="#deleteBtnClicked" prefHeight="40.0" prefWidth="40.0" text="&lt;&lt;">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </JFXButton>
               </children>
            </VBox>
            <VBox minHeight="450.0" minWidth="300.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Your list">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="2.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Label>
                  <JFXListView fx:id="_userChoseList" VBox.vgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <JFXButton fx:id="_confirmBtn" buttonType="RAISED" onAction="#confirmBtnClicked" prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: white;" text="Confirm">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
            </JFXButton>
         </children>
      </HBox>
   </children>
</VBox>
