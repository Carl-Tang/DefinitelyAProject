<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MathStartPageController">
   <children>
      <Label text="Answer Math Questions In Maori">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <Label opacity="0.8" text="Enter your name or play as a guest" />
      <HBox alignment="CENTER">
         <children>
            <VBox>
               <HBox.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </HBox.margin>
               <children>
                  <Label fx:id="_tipMessage" opacity="0.8" text="The name can only contain letters and numbers">
                     <VBox.margin>
                        <Insets left="2.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="_userNameTF" prefHeight="40.0" prefWidth="400.0" promptText="Please enter your name" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
         <children>
            <Button fx:id="_normalModeButton" mnemonicParsing="false" onAction="#normalModeButtonClicked" prefHeight="35.0" prefWidth="150.0" text="Normal Mode">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="_endlessModeButton" mnemonicParsing="false" onAction="#endlessModeButtonClicked" prefHeight="35.0" prefWidth="150.0" text="Endless Mode">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
