<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="1000.0">
         <children>
            <Label text="Enter your name to start">
               <font>
                  <Font size="49.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="textFieldForUsername" alignment="CENTER" prefWidth="600.0" />
               </children>
            </HBox>
            <Button fx:id="startBtn" mnemonicParsing="false" onAction="#start" text="Start" />
         </children>
      </VBox>
   </children>
</GridPane>
