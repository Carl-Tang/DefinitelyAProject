<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <JFXButton fx:id="previous" onAction="#previous" text="Previous" />
      <Region prefHeight="500.0" prefWidth="80.0" />
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <ImageView fx:id="imageView" fitHeight="600.0" fitWidth="900.0" pickOnBounds="true" preserveRatio="true">
               <effect>
                  <DropShadow blurType="GAUSSIAN" color="#00000099" height="30.0" radius="14.5" width="30.0" />
               </effect></ImageView>
            <Label fx:id="instruction" text="Label">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font></Label>
         </children>
      </VBox>
      <Region prefHeight="500.0" prefWidth="60.0" />
      <JFXButton fx:id="next" onAction="#next" text="Next" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</HBox>
